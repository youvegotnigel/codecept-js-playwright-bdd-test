{
  "name": "codeceptjs-playwright-bdd-test",
  "version": "1.0.0",
  "description": "A sample CodeceptJS project using Playwright and BDD-style tests",
  "main": "index.js",
  "scripts": {
    "test": "codeceptjs run --steps",
    "test:allBrowsers": "codeceptjs run-multiple allBrowsers --steps",
    "test:verbose": "codeceptjs run --steps --verbose",
    "test:login": "codeceptjs run --steps --grep '@login'",
    "test:multi": "codeceptjs run --reporter mocha-multi"
  },
  "author": "youvegotnigel",
  "license": "ISC",
  "dependencies": {
    "mocha-junit-reporter": "^2.2.1",
    "mocha-multi": "^1.1.7",
    "mochawesome": "^7.1.4",
    "@playwright/test": "^1.56.1"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "allure-codeceptjs": "^3.4.2",
    "codeceptjs": "^3.7.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}

